#!/usr/bin/php

<?php

if (5 !== count($argv)) {
    throw new \Exception('configure file param value parser');
}

list($cmd, $file, $param, $value, $parser) = $argv;

$strings = [
    $param,
    sprintf('#%s', $param),
    sprintf(';%s', $param),
];

$lines = explode("\n", file_get_contents($file));
$result = [];
$found = false;

foreach ($lines as $line) {
    $unit = false;
    foreach ($strings as $str) {
        if (0 === strpos(trim($line), $str)
        && strlen($str) < strlen(trim($line)))
        {
            $result[] = sprintf('%s%s%s', $param, $parser, $value);
            $found = true;
            $unit = true;
        }
    }

    if (false === $unit) {
        $result[] = $line;
    }
}

if (false === $found) {
    $result[] = sprintf('%s%s%s', $param, $parser, $value);
}

file_put_contents($file, implode("\n", $result));
